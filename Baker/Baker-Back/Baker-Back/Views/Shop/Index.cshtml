@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w-100 vh-170 pt-5">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-9 ">
                <div class="row text-xxl-center">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4 mt-5 ">
                            <div>
                                
                                <img src="assets/image/product/@item.Image" alt="">
                            </div>
                            <div class="bg-dark g"><h4 class="text-white">Add To Cart</h4></div>
                            <span class="mt-2">@item.CompanyName</span>
                            <h5 class="mt-3 text-uppercase"> @item.Name</h5>
                            <span class="mt-4">$@item.Price</span>
                        </div>
                    }





                </div>
                <hr>
                <div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link disabled" href="#">1</a></li>
                            <li class="page-item"><a class="page-link disabled" href="#">2</a></li>
                            <li class="page-item"><a class="page-link disabled" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link disabled" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="col">
                    <div class="row-cols-md-4 ">
                        <h5 class="text-uppercase text-dark">Categories</h5>
                        <p class="text-dark  h">Donuts</p>
                        <p class="text-dark h">Donuts</p>
                        <p class="text-dark h">Donuts</p>
                        <p class="text-dark h">Donuts</p>
                        <p class="text-dark h">Donuts</p>
                        <div class="input-group pt-4 ">
                            <input type="email" class="form-control" placeholder="Search Product" aria-label="Search Product" aria-describedby="button-addon2">
                            <button class="btn btn-dark" type="button" id="button-addon2"><i class="bi bi-search text-white"></i></button>
                        </div>
                    </div>
                    <div class="row-cols-md-4 mt-3">
                        <h5 class="text-uppercase text-dark">Filter</h5>

                        <input type="range" class="form-range" id="customRange1">
                        <p>Price:$40-$100</p>
                        <button class="btn btn-dark"><a href="#" class="text-decoration-none text-uppercase text-white">Filter</a></button>
                    </div>

                    <div class="row-cols-md-4 mt-3">
                        <h5 class="text-uppercase text-dark">Banner Spot</h5>
                        <img src="assets/image/banner-shop-sidebar.jpg" width="150" height="150" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

