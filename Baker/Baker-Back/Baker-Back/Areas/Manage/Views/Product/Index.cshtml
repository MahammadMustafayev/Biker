@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>

                <th scope="col">Name</th>
                <th scope="col">Company Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Is Sale</th>
                <th scope="col">Is Deleted</th>
                <th scope="col">Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Id</td>

                    <td>@item.Name</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Desc</td>
                    <td>@item.Price</td>
                    <td >@item.IsSale</td>
                    <td >@item.IsDeleted</td>
                    <td>@item.Photo</td>

                    <td><img src="~/assets/image/product/@item.Image" style="max-width:100px" /></td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


